ARG BASE_IMAGE
ARG NODE_VERSION=16.14.2
ARG TARGETPLATFORM

FROM $BASE_IMAGE
WORKDIR /opt/cquest/

# Expects context in monorepo root
COPY . /opt/cquest/
RUN if [ "$TARGETPLATFORM" = "linux/amd64" ]; then ARCHITECTURE=x64; elif [ "$TARGETPLATFORM" = "linux/arm/v7" ]; then ARCHITECTURE=armv7l; elif [ "$TARGETPLATFORM" = "linux/arm64" ]; then ARCHITECTURE=arm64; else ARCHITECTURE=x64; fi \
  && wget -c https://nodejs.org/dist/v$NODE_VERSION/node-v$NODE_VERSION-linux-$ARCHITECTURE.tar.xz -O - \
  | tar -xz -C /usr/ \
  && apk add yarn \
  && yarn && yarn clean && yarn build \
  && chown -R 1000:1000 * \
  && rm -rf /usr/local/share/.cache /opt/cquest/services/parser

USER 1000:1000

ENV NODE_ENV=prod
ENV PANDORA_CQ_NORMALIZED_DATA_PATH=/opt/cquest/information
ENV PANDORA_LOCAL_IMAGES_PREFIX=/opt/cquest/information
ENV PANDORA_IMAGES_SUFFIX=.png
ENV PANDORA_PREFIX=!

ENTRYPOINT ["/bin/sh", "-c", "yarn workspace @cquest/db migrate:up && yarn workspace @cquest/pandora start"]
